@using System.Web
@model IEnumerable<Category>
@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron alert alert-info">
    <h3>مرحبا بك عزيزي الزائر</h3>
    <p>مرحبا بك في فضاء البحث عن الوظائف باختلاف أصنافها، يمكنك نشر وظيفة إن كنت ناشرا، ويمكنك التقدم للوظيفة إذا كنت باحثا عن شغل</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>


@foreach (var item in Model)
{
    <div class="panel panel-info mb-4">
        <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.CategoryName)</h1></div>

        <div class="row panel-body">
            <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
            @if (item.Jobs != null)
            {
                @foreach (var subItem in item.Jobs)
                {
                    <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:10px; min-height:380px;">
                        <img src="~/Uploads/@subItem.JobImage" style="height:250px;width:250px;" />
                        <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                        <h5>@Html.DisplayFor(modelItem => subItem.JobContent)</h5>
                        @Html.ActionLink("التفاصيل", "Details", new { jobId = subItem.Id },new { @class="btn btn-primary"})
                    </div>
                }
            }
        </div>
    </div>
}

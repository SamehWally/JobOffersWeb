@model IEnumerable<ApplyForJob>

@foreach (var app in Model)
{
    <h3>@app.Job.JobTitle</h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                اسم الباحث
            </th>
            <th>
                نص الرسالة
            </th>
            <th>
                تاريخ الإرسال
            </th>
        </tr>
        @foreach (var item in Model)
        {
            @if (item.Job.Id == app.JobId)
            {
                <tr>
                    <td>
                    @item.User.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.ApplyDate
                </td>
            </tr>
            }
        }
    </table>
}

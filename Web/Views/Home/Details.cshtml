@model Web.Models.Job

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>تفاصيل الوظيفة</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)" class="thumbnail" style="width:50px;height:50px;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Apply" asp-route-id="@Model?.Id">التقدم إلي الوظيفة</a> |
    <a asp-action="Index">العودة إلي الصفحة الرئيسية</a>
</div>
